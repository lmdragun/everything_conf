<h2>User: <%= @user.username %></h2>
<h3>Followers:</h3>
<ul>
	<% for user in @user.followers %>
		<li><%=h user.username %></li>
	<% end %>
</ul>
<% if current_user != @user %>
<% end %>
<h3>Following:</h3>
<ul>
	<% for follow in @user.follows %>
		<li>
			<p><%=h follow.followed.username %>(<%= link_to "remove", follow, :method => :delete %>)</p>
		</li>
	<% end %>
</ul>
